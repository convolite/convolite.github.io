<script>
  $(document).ready(function() {
    $('input').blur(function() {
      setTimeout(function() {
        window.scrollTo(0, 0);
      }, 100); // Add a slight delay to avoid flicker
    });
  });

  window.addEventListener('load', function() {
    var loadingDiv = document.getElementById('loading');
    loadingDiv.classList.add('show');

    setTimeout(function() {
      loadingDiv.style.opacity = '0';
      setTimeout(function() {
        loadingDiv.style.display = 'none';
      }, 500);
    }, 6000);

    setTimeout(function() {
      document.querySelector('footer').classList.add('footer-visible');
    }, 2000);

    var loadingBar = document.querySelector('.loading-bar-fill');
    loadingBar.style.width = '100%';

    // Check if the website is active and scroll down
    setInterval(function() {
      var iframe = document.getElementById('myIframe');
      if (iframe.contentWindow.document.body.scrollHeight > iframe.contentWindow.innerHeight) {
        iframe.contentWindow.scrollTo(0, iframe.contentWindow.document.body.scrollHeight);
      }
    }, 1000);
  });
</script>
